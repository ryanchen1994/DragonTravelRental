@{
    ViewData["Title"] = "龍行天下小客車租賃股份有限公司";
}

<div class="hero">
    <div class="hero-content">
        <h1>龍行天下小客車租賃</h1>
        <p>提供豪華、舒適的租車體驗</p>
    </div>
</div>

<section class="section">
    <div class="container">
        <h2 class="section-title">我們的服務</h2>
        <div id="serviceCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="service-card">
                                <i class="fas fa-car"></i>
                                <h3>豪華明星保母車</h3>
                                <img src="/images/luxury-car.jpg" alt="豪華明星保母車" class="img-fluid mt-3">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="service-card">
                                <i class="fas fa-plane"></i>
                                <h3>機場接送</h3>
                                <img src="/images/airport-transfer.jpg" alt="機場接送" class="img-fluid mt-3">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="service-card">
                                <i class="fas fa-user-tie"></i>
                                <h3>專屬司機</h3>
                                <img src="/images/chauffeur.jpg" alt="專屬司機" class="img-fluid mt-3">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="service-card">
                                <i class="fas fa-car-side"></i>
                                <h3>賓士九人座</h3>
                                <img src="/images/benz.jpg" alt="賓士九人座" class="img-fluid mt-3">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="service-card">
                                <i class="fas fa-route"></i>
                                <h3>包車旅遊</h3>
                                <img src="/images/tour.jpg" alt="包車旅遊" class="img-fluid mt-3">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="service-card">
                                <i class="fas fa-map-marked-alt"></i>
                                <h3>全台服務</h3>
                                <img src="/images/taiwan.jpg" alt="全台服務" class="img-fluid mt-3">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Add more carousel items as needed -->
            </div>
            <a class="carousel-control-prev" href="#serviceCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#serviceCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="contact-section">
            <h2 class="section-title">聯繫我們</h2>
            <div class="row">
                <div class="col-md-6">
                    <h3>LINE官方帳號</h3>
                    <p>掃描下方QR碼加入我們的LINE官方帳號：</p>
                    <img src="/images/qr-code.png" alt="LINE QR Code" class="img-fluid" />
                </div>
                <div class="col-md-6">
                    <h3>聯繫方式</h3>
                    <p>電話：04 2336 6577</p>
                    <p>手機：0919 667 119</p>
                    <p>地址：<a href="https://g.co/kgs/7yXnVSi" target="_blank">台中市烏日區中華路185巷1號</a></p>
                </div>
            </div>
        </div>
    </div>
</section>